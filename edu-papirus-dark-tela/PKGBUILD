# Maintainer: Erik Dubois <erik.dubois@gmail.com>
pkgname=edu-papirus-dark-tela-git
_pkgname=edu-papirus-dark-tela
pkgver=22.02
pkgrel=08
_destname1="/usr/share/icons/"
_destname2="/usr/share/plasma/"
pkgdesc="Papirus dark icons with Tela folders"
arch=('any')
url="https://github.com/erikdubois/${_pkgname}.git"
license=('GPL3')
depends=('papirus-icon-theme')
makedepends=('git')
replaces=('papirus-dark-tela-git')
provides=("${pkgname}")
conflicts=()
options=(!strip !emptydirs)
source=(${_pkgname}::"git+${url}")
sha256sums=('SKIP')
package() {
	install -dm 755 ${pkgdir}${_destname1}
	install -dm 755 ${pkgdir}${_destname2}
	rm ${srcdir}/${_pkgname}/git*
	rm ${srcdir}/${_pkgname}/setup*
    cp -r ${srcdir}/${_pkgname}${_destname1}/* ${pkgdir}${_destname1}
	cp -r ${srcdir}/${_pkgname}${_destname1}/* ${pkgdir}${_destname2}
}
